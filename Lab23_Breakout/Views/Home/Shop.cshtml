@model IEnumerable<Lab23_Breakout.Models.Item>

@{
    ViewBag.Title = "Shop";
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ItemName)
        </th>
        <th>
            @Html.DisplayNameFor(m => m.Description)
        </th>
        <th>
            @Html.DisplayNameFor(m => m.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(m => m.Price)
        </th>
        <th>
            Action
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(m => item.id)
            </td>
            <td>
                @Html.DisplayFor(m => item.ItemName)
            </td>
            <td>
                @Html.DisplayFor(m => item.Description)
            </td>
            <td>
                @Html.DisplayFor(m => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(m => item.Price)
            </td>
            <td>
                <form action="Shop" method="post" restricted> <!-- restrict input name so user can't change -->
               
                    <input name="id" value="@item.id"/>
                    <input type="submit" name="Buy" value="Buy"/>
                </form>
            </td>
        </tr>
    }
</table>